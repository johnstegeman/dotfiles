let g:airline_powerline_fonts = 1
set cursorline
colorscheme desert
let g:airline_theme='solarized_flood'

let mapleader = ","

" Fast save
nmap <leader>w :w!<cr>

" :W sudo save
command! W execute 'w !sudo tee % > /dev/null' <bar> edit!

" 7 lines around the cursor when scrolling
set so=7

set ruler
set ignorecase
set smartcase
set hlsearch
set incsearch
set showmatch
set mat=2


set noerrorbells
set novisualbell

set foldcolumn=1

syntax enable

set nobackup
set nowb
set noswapfile

set smarttab
set shiftwidth=3
set tabstop=3

set ai
set si

set wrap

au BufReadPost * if line("'\"") > 1 && line("'\"") <= line("$") | exe "normal! g'\"" | endif
